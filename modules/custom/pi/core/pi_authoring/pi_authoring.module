 */
function pi_authoring_new_activities_placeholder_add_form_submit($form, &$form_state){
	$inquiry_id = arg(3);
	$psp_id = arg(4);

	//echo $inquiry_id . " + " . $psp_id;

	//insert new activity (temp) //
	$query = "INSERT INTO {pi_activity} SET ";
