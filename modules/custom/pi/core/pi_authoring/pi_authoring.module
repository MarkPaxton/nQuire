/**
 * Implementation of _help hook for pi_authoring
 */
function pi_authoring_help($path, $arg) {

	$output = '';

	switch ($path) {
		case "admin/help#pi_authoring":
			$output = '<p>'.  t("Test Authoring for Basic Inquiry Authoring"). '</p>';
			break;
	}

	return $output;
}

