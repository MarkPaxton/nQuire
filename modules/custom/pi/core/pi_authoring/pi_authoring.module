	//if there are activities in placeholder then the text changes
	$inquiry_nids = pi_inquiry_load_nids();
	
	$content .= "<table>";
	$content .= '<tr bgcolor="#EEEEEE"><td>Inquiry Name</td><td>Place Holder</td><td>Real</td></tr>';
