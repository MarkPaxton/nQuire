		$content .= "<tr>";
		$content .= "<td>" . $inquiry->title . "</td>";
		$content .= "<td>" . l("add", "piauthoring/activities/1/" . $inquiry->nid) . "</td>";
		$content .= "<td>" . l("update", "piauthoring/activities/3/" . $inquiry->nid) . "</td>";
