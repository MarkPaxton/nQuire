	//WHERE'S
	if($inquiry_value != 'none'){
		$phase_query .= " WHERE {pi_inquiry_phase}.inquiry_id = '" . $inquiry_value . "'";
	}
	if($stage_value != 'none'){
		if($inquiry_value != 'none'){
			$phase_query .= " AND";
		}
		else{
			$phase_query .= " WHERE";
		}
		$phase_query .= " {pi_stage_phase}.stage_id = '" . $stage_value . "'";
	}
	return $phase_query;
}

